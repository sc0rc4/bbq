#include <iostream>

using namespace std;
int main() {
    int num1, num2, area, perim;
    cout << "enter 1 side : ";
    cin >> num1;
    
    cout << "enter 2 side : ";
    cin >> num2;
    
    perim = (num1 + num2) * 2;
    area = (num1 * num2);
    
    cout << "area is " << area << " perimetr is " << perim << endl;

    return 0;
}
